<h1> All Gifs </h1>

<%= link_to 'Your favorite Gifs are this direction', user_path(current_user) %>

<% @gifs.each do |gif| %>
  <%= gif.category.name %>
  <%= link_to image_tag(gif.image_path, size: '200x300', id: "image_#{gif.id}"), gif_path(gif) %>
  <% if current_user %>
    <%= form_for current_user.favorites.new, url: user_favorites_path(current_user) do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :gif_id, value: gif.id  %>
      <%= f.submit 'Add Gif To Your Favorites' %>
    <% end %>
  <% end %>
<% end %>